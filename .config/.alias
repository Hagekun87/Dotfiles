
# Alias

alias lsb="eza -a --group-directories-first --color --git --icons --tree --level=1"
alias lst="eza -a --group-directories-first --icons --tree --level=2"
alias home="cd ~/"
alias c="clear"
alias y="yazi"
alias q="exit"
alias v="nvim"
alias m="ncmpcpp"
alias r="source ~/.zshrc"
alias b="shutdown now"
alias rb="reboot"
alias tmux='tmux -f ~/.config/tmux/tmux.conf'

# Pacman y paru
alias paru-ls='paru -Qem'
alias pacman-ls='pacman -Qe'

alias pacman-upgrade='sudo pacman -Syu'
alias paru-upgrade='paru -Syu'

alias upgrades-ls='echo "== Pacman ==" && checkupdates && echo && echo "== AUR (paru) ==" && paru -Qua'
alias check_power_script='date -d "@$(cat ~/.cache/arch-updates.timestamp)"'
alias installed-ls='sudo cat /var/log/pacman.log | grep -i "installed"'

alias mpd-status="systemctl --user status mpd"
alias mpd-start="systemctl --user start mpd"
alias mpd-stop="systemctl --user stop mpd.socket"
alias mpd-restart="systemctl --user restart mpd.service"
